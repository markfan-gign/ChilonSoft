@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<h2>
    创 建 用 户</h2>
<link href="/Content/Uploadify/uploadify.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="@Url.Content("~/Content/Scripts/swfobject.js")" ></script>
<script type="text/javascript" src="@Url.Content("~/Content/Uploadify/jquery.uploadify.v2.1.4.min.js")" ></script>
<script type="text/javascript" src="@Url.Content("~/Content/Kindeditor/kindeditor-min.js")" ></script>
<script type="text/javascript" src="@Url.Content("~/Content/Kindeditor/lang/zh_CN.js")" ></script>
@using (Html.BeginForm("Add", "user", FormMethod.Post, new { id = "addform" }))
{ 
    <div class="form">
        <div class="fields">
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        登录名:</label>
                </div>
                <div class="input">
                    <input class="small" type="text" id="LogName" name="LogName" datatype="s6-18" nullmsg="请输入登录名！"
                        errormsg="登录名至少6个字符,最多18个字符！" />
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        密 码:</label>
                </div>
                <div class="input">
                    <input class="small" type="password" id="PassWord" name="PassWord" datatype="*6-16"
                        nullmsg="请设置密码！" errormsg="密码范围在6~16位之间！" />
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        确认密码:</label>
                </div>
                <div class="input">
                    <input class="small" type="password" id="PassWord2" name="PassWord2" datatype="*"
                        recheck="PassWord" nullmsg="请再输入一次密码！" errormsg="您两次输入的账号密码不一致！" />
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        姓名:</label>
                </div>
                <div class="input">
                    <input class="small" type="text" id="TrueName" name="TrueName" datatype="*2-8" nullmsg="请输入姓名！"
                        errormsg="姓名至少2个字符,最多8个字符！" />
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        手机号码:</label>
                </div>
                <div class="input">
                    <input class="small" type="text" id="Mobile" name="Mobile" datatype="m" nullmsg="请输入您的手机号码！"
                        errormsg="手机号码输入出错!" />
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        电话号码:</label>
                </div>
                <div class="input">
                    <input class="small" type="text" id="Tel" name="Tel" datatype="n6-8" nullmsg="请输入电话号码！"
                        errormsg="电话号码输入出错!" />
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        传真号码:</label>
                </div>
                <div class="input">
                    <input class="small" type="text" id="Fax" name="Fax" datatype="n6-8" nullmsg="请输入传真号码！"
                        errormsg="传真号码输入出错!" />
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        电子邮箱:</label>
                </div>
                <div class="input">
                    <input class="small" type="text" id="Email" name="Email" datatype="e" nullmsg="请输入电子邮箱！"
                        errormsg="电子邮箱输入出错!" />
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        QQ号:</label>
                </div>
                <div class="input">
                    <input class="small" type="text" id="QQ" name="QQ" datatype="n1-15" nullmsg="请输入QQ号！"
                        errormsg="QQ号输入出错!" />
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        公司名称:</label>
                </div>
                <div class="input">
                    <input class="small" type="text" id="Company" name="Company" datatype="s1-36" nullmsg="请输入公司名称！"
                        errormsg="公司名称输入出错!" />
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        职位:</label>
                </div>
                <div class="input">
                    <input class="small" type="text" id="Job" name="Job" datatype="s1-16" nullmsg="请输入职位！"
                        errormsg="职位输入出错!" />
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        地址:</label>
                </div>
                <div class="input">
                    <input class="large" type="text" id="Address" name="Address" datatype="s1-255" nullmsg="请输入地址！"
                        errormsg="地址输入出错!" />
                </div>
            </div>
            <div class="buttons">
                <input type="submit" name="submit" value="创建" class="ui-button ui-widget ui-state-default ui-corner-all"
                    role="button" aria-disabled="false" />
                <input type="reset" name="reset" value="清空" class="ui-button ui-widget ui-state-default ui-corner-all"
                    role="button" aria-disabled="false" />
            </div>
        </div>
    </div>
}
<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        //A
        $("#h-menu-user").addClass("selected");
        $("#menu-user").removeClass("closed");
        //B
        $("#userli").removeClass("plus");
        $("#userul").removeClass("collapsed");
        //C
        $("#userli").addClass("minus");
        $("#userul").addClass("expanded");
        //D
        $("#useradd").addClass("current");
        //Validform
        $("#addform").Validform();
    });
</script>
<!-- scripts (Validform) -->
<script src="@Url.Content("~/Content/admin/scripts/Validform_v5.1.js")" type="text/javascript"></script>
