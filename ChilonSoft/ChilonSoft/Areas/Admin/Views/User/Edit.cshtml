@model ChilonSoft.Models.User
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<h2>
    修 改 用 户 信 息</h2>
<link href="/Content/Uploadify/uploadify.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="@Url.Content("~/Content/Scripts/swfobject.js")" ></script>
<script type="text/javascript" src="@Url.Content("~/Content/Uploadify/jquery.uploadify.v2.1.4.min.js")" ></script>
<script type="text/javascript" src="@Url.Content("~/Content/Kindeditor/kindeditor-min.js")" ></script>
<script type="text/javascript" src="@Url.Content("~/Content/Kindeditor/lang/zh_CN.js")" ></script>
@using (Html.BeginForm("edit", "user", FormMethod.Post, new { id = "editform" }))
{ 
    <div class="form">
        <div class="fields">
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        登录名:</label>
                </div>
                <div class="input">
                    @Html.TextBoxFor(d => d.LogName, new { @class = "small", @datatype = "s6-18", @nullmsg = "请输入登录名！", @errormsg = "登录名至少6个字符,最多18个字符！" })
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        密 码:</label>
                </div>
                <div class="input">
                    @Html.TextBoxFor(d => d.PassWord, new { @class = "small", @datatype = "*6-16", @nullmsg = "请设置密码！", @errormsg = "密码范围在6~16位之间！" })
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        姓名:</label>
                </div>
                <div class="input">
                    @Html.TextBoxFor(d => d.TrueName, new { @class = "small", @datatype = "*2-8", @nullmsg = "请输入姓名！", @errormsg = "姓名至少2个字符,最多8个字符！" })
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        手机号码:</label>
                </div>
                <div class="input">
                    @Html.TextBoxFor(d => d.Mobile, new { @class = "small", @datatype = "m", @nullmsg = "请输入您的手机号码！", @errormsg = "手机号码输入出错!" })
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        电话号码:</label>
                </div>
                <div class="input">
                    @Html.TextBoxFor(d => d.Tel, new { @class = "small", @datatype = "n6-8", @nullmsg = "请输入电话号码！", @errormsg = "电话号码输入出错!" })
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        传真号码:</label>
                </div>
                <div class="input">
                    @Html.TextBoxFor(d => d.Fax, new { @class = "small", @datatype = "n6-8", @nullmsg = "请输入传真号码！", @errormsg = "传真号码输入出错!" })
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        电子邮箱:</label>
                </div>
                <div class="input">
                    @Html.TextBoxFor(d => d.Email, new { @class = "small", @datatype = "e", @nullmsg = "请输入电子邮箱！", @errormsg = "电子邮箱输入出错!" })
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        QQ号:</label>
                </div>
                <div class="input">
                    @Html.TextBoxFor(d => d.QQ, new { @class = "small", @datatype = "n1-15", @nullmsg = "请输入QQ号！", @errormsg = "QQ号输入出错!" })
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        公司名称:</label>
                </div>
                <div class="input">
                    @Html.TextBoxFor(d => d.Company, new { @class = "small", @datatype = "s1-36", @nullmsg = "请输入公司名称！", @errormsg = "公司名称输入出错!" })
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        职位:</label>
                </div>
                <div class="input">
                    @Html.TextBoxFor(d => d.Job, new { @class = "small", @datatype = "s1-16", @nullmsg = "请输入职位！", @errormsg = "职位输入出错!" })
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        地址:</label>
                </div>
                <div class="input">
                    @Html.TextBoxFor(d => d.Address, new { @class = "large", @datatype = "s1-255", @nullmsg = "请输入地址！", @errormsg = "地址输入出错!" })
                </div>
            </div>
            <div class="buttons">
                <input type="submit" name="submit" value="修改" class="ui-button ui-widget ui-state-default ui-corner-all"
                    role="button" aria-disabled="false" />
                <input type="reset" name="reset" value="清空" class="ui-button ui-widget ui-state-default ui-corner-all"
                    role="button" aria-disabled="false" />
            </div>
        </div>
    </div>
}
<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        //A
        $("#h-menu-user").addClass("selected");
        $("#menu-user").removeClass("closed");
        //B
        $("#userli").removeClass("plus");
        $("#userul").removeClass("collapsed");
        //C
        $("#userli").addClass("minus");
        $("#userul").addClass("expanded");
        //D
        $("#useradd").addClass("current");
        //Validform
        $("#editform").Validform();
    });
</script>
<!-- scripts (Validform) -->
<script src="@Url.Content("~/Content/admin/scripts/Validform_v5.1.js")" type="text/javascript"></script>
