@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>
    创 建 文 件 分 类</h2>
@using (Html.BeginForm("Add", "downloads", FormMethod.Post, new { id = "addform" }))
{ 
<div class="form">
    <div class="fields">
        <div class="field  field-first">
            <div class="label">
                <label for="input-small">
                    文件分类:</label>
            </div>
            <div class="input">
                <input type="text" id="CategoryName" name="CategoryName" class="small" datatype="s3-8" nullmsg="请输入文件分类！" errormsg="文件分类至少3个字符,最多8个字符！"/>
            </div>
        </div>
        <div class="field  field-first">
            <div class="label">
                <label for="input-small">
                    排序编号:</label>
            </div>
            <div class="input">
                <input type="text" id="Sort" name="Sort" class="small" datatype="n" nullmsg="请输入排序编号！" errormsg="排序编号只能是阿拉伯数字!"/>
                <span class="error">数字大小,显示排序排前</span>
            </div>
        </div>
        <div class="buttons">
            <input type="submit" name="submit" value="创建" class="ui-button ui-widget ui-state-default ui-corner-all"
                role="button" aria-disabled="false"/>
            <input type="reset" name="reset" value="清空" class="ui-button ui-widget ui-state-default ui-corner-all"
                role="button" aria-disabled="false"/>
        </div>
    </div>
</div>
}
<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        //A
        $("#h-menu-download").addClass("selected");
        $("#menu-download").removeClass("closed");
        //B
        $("#downloadsli").removeClass("plus");
        $("#downloadsul").removeClass("collapsed");
        //C
        $("#downloadsli").addClass("minus");
        $("#downloadsul").addClass("expanded");
        //D
        $("#downloadsadd").addClass("current");
        //Validform
        $("#addform").Validform();
    });
</script>
<!-- scripts (Validform) -->
<script src="@Url.Content("~/Content/admin/scripts/Validform_v5.1.js")" type="text/javascript"></script>