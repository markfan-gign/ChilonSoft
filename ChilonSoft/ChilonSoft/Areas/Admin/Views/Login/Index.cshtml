@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>后台管理系统</title>
    <meta http-equiv="Content-Type" content="text/html;charset=gbk" />
    <!-- stylesheets -->
    <link rel="stylesheet" href="@Href("~/Content/admin/css/reset.css")" type="text/css" media="screen" />
    <link rel="stylesheet" href="@Href("~/Content/admin/css/style.css")" type="text/css" media="screen" />
    <link id="color" rel="stylesheet" type="text/css" href="@Href("~/Content/admin/css/colors/blue.css")" />
    <!-- scripts (jquery) -->
    <script src="@Href("~/Content/Admin/scripts/jquery-1.4.2.min.js")" type="text/javascript"></script>
    <script src="@Href("~/Content/Admin/scripts/jquery-ui-1.8.custom.min.js")" type="text/javascript"></script>
    <script src="@Href("~/Content/Admin/scripts/smooth.js")" type="text/javascript"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            style_path = "../../Content/Admin/css/colors";
            $("input.focus").focus(function () {
                if (this.value == this.defaultValue) {
                    this.value = "";
                }
                else {
                    this.select();
                }
            });

            $("input.focus").blur(function () {
                if ($.trim(this.value) == "") {
                    this.value = (this.defaultValue ? this.defaultValue : "");
                }
            });
            $("#btn_ok").click(function () {
                $.post("/Admin/login", { "username": $("#username").val(), "password": $("#password").val() }, function (data) {
                    if (data == "success") {
                        location.href = "/Admin/Default";
                    }
                    else {
                        $("#messages").html(data);
                    }
                });
            })
            $("input:submit, input:reset").button();
        });
    </script>
</head>
<body>
    <div id="login">
        <!-- login -->
        <div class="title">
            <h5>
                欢迎登录后台管理系统</h5>
            <div class="corner tl">
            </div>
            <div class="corner tr">
            </div>
        </div>
        <div class="messages">
            <div id="message-notice" class="message message-notice">
                <div class="image">
                    <img src="../Content/Admin/images/icons/notice.png" alt="Error" height="32" />
                </div>
                <div class="text">
                    <h6>系统提示</h6>
                    <span>--------------------</span>
                    <div id="messages">
                        请输入账户和密码.
                    </div>
                </div>
            </div>
        </div>
        <div class="inner">
            <div class="form">
                <!-- fields -->
                <div class="fields">
                    <div class="field">
                        <div class="label">
                            <label for="username">
                                登录帐号:</label>
                        </div>
                        <div class="input">
                            <input type="text" id="username" name="username" size="40" value="" class="focus" />
                        </div>
                    </div>
                    <div class="field">
                        <div class="label">
                            <label for="password">
                                登录密码:</label>
                        </div>
                        <div class="input">
                            <input type="password" id="password" name="password" size="40" value="" class="focus" />
                        </div>
                    </div>
                    <div class="buttons">
                        <input type="submit" value="登 录" id="btn_ok" />
                    </div>
                </div>
                <!-- end fields -->
                <!-- links -->
                <div class="links">
                    <a href="/">返回首页</a>
                </div>
                <!-- end links -->
            </div>
        </div>
        <!-- end login -->
        <!--
        <div id="colors-switcher" class="color">
            <a href="" class="blue" title="Blue"></a><a href="" onclick="" class="green" title="Green">
            </a><a href="" class="brown" title="Brown"></a><a href="" class="purple" title="Purple">
            </a><a href="" class="red" title="Red"></a><a href="" class="greyblue" title="GreyBlue">
            </a>
        </div>
        -->
    </div>
</body>
</html>
