@model ChilonSoft.Helpers.Pager<ChilonSoft.Models.AdClass>
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<h2>
    创 建 广 告 分 类</h2>
<link href="/Content/Uploadify/uploadify.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="@Url.Content("~/Content/Scripts/swfobject.js")" ></script>
<script type="text/javascript" src="@Url.Content("~/Content/Uploadify/jquery.uploadify.v2.1.4.min.js")" ></script>
<script type="text/javascript" src="@Url.Content("~/Content/Kindeditor/kindeditor-min.js")" ></script>
<script type="text/javascript" src="@Url.Content("~/Content/Kindeditor/lang/zh_CN.js")" ></script>
<script type="text/javascript" src="@Url.Content("~/Content/My97DatePicker/WdatePicker.js")" ></script>
@using (Html.BeginForm("Add", "adcategory", FormMethod.Post, new { id = "addform" }))
{ 
    <div class="form">
        <div class="fields">
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        分类名称:</label>
                </div>
                <div class="input">
                    <input type="text" id="ClassName" name="ClassName" class="small" datatype="s1-18" nullmsg="请输入分类名称！"
                        errormsg="分类名称至少1个字符,最多18个字符！">
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        分类描述:</label>
                </div>
                <div class="input">
                    <textarea name="ClassDescr" style="width: 669px; height: 300px;"></textarea>
                    <span class="blue">您当前输入了 <span class="word_count">0</span> 个文字。</span>
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        广告位置:</label>
                </div>
                <div class="input">
                    <input class="small" type="text" id="AdLocation" name="AdLocation"
                            datatype="s1-18" nullmsg="请输入广告位置" errormsg="广告位置至少1个字符,最多18个字符！" />
                </div>
            </div>
        
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        广告宽度:</label>
                </div>
                <div class="input">
                    <input class="small" type="text" id="LocationWidth" name="LocationWidth" datatype="n" nullmsg="请输入广告宽度"
                        errormsg="广告宽度为有效数字" />
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        广告高度:</label>
                </div>
                <div class="input">
                    <input class="small" type="text" id="LocationHeight" name="LocationHeight" datatype="n" nullmsg="请输入广告高度"
                        errormsg="广告高度为有效数字" />
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                       投放数量</label>
                </div>
                <div class="input">
                    <input class="small" type="text" id="AdNum" name="AdNum" datatype="n" nullmsg="投放数量"
                        errormsg="投放数量为有效数字" />
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        排序编号:</label>
                </div>
                <div class="input">
                    <input type="text" id="OrderNum" name="OrderNum" class="small" datatype="n" nullmsg="请输入排序编号！"
                        errormsg="排序编号只能是阿拉伯数字!" />
                    <span class="error">数字大小,显示排序排前</span>
                </div>
            </div>
            <div class="buttons">
                <input type="submit" name="submit" value="创建" class="ui-button ui-widget ui-state-default ui-corner-all"
                    role="button" aria-disabled="false" />
                <input type="reset" name="reset" value="清空" class="ui-button ui-widget ui-state-default ui-corner-all"
                    role="button" aria-disabled="false" />
            </div>
        </div>
    </div>
}
<script>
    KindEditor.ready(function (K) {
        K.create('textarea[name="ClassDescr"]', {
            afterChange: function () {
                K('.word_count').html(this.count());
            }
        });
    });
</script>
<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        //A
        $("#h-menu-ad").addClass("selected");
        $("#menu-ad").removeClass("closed");
        //B
        $("#adcategoryli").removeClass("plus");
        $("#adcategoryul").removeClass("collapsed");
        //C
        $("#adcategoryli").addClass("minus");
        $("#adcategoryul").addClass("expanded");
        //D
        $("#adcategoryadd").addClass("current");

        //Validform
        $("#addform").Validform();
    });
</script>

<!-- scripts (Validform) -->
<script src="@Url.Content("~/Content/admin/scripts/Validform_v5.1.js")" type="text/javascript"></script>
