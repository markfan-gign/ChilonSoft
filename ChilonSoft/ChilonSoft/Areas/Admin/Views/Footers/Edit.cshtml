@model ChilonSoft.Models.Footers
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<h2>
    修 改 页 脚</h2>
<link href="/Content/Uploadify/uploadify.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="@Url.Content("~/Content/Scripts/swfobject.js")" ></script>
<script type="text/javascript" src="@Url.Content("~/Content/Uploadify/jquery.uploadify.v2.1.4.min.js")" ></script>
<script type="text/javascript" src="@Url.Content("~/Content/Kindeditor/kindeditor-min.js")" ></script>
<script type="text/javascript" src="@Url.Content("~/Content/Kindeditor/lang/zh_CN.js")" ></script>
<script type="text/javascript" src="@Url.Content("~/Content/My97DatePicker/WdatePicker.js")" ></script>
@using (Html.BeginForm("edit", "footers", FormMethod.Post, new { id = "editform" }))
{ 
    <div class="form">
        <div class="fields">
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        页脚分类:</label>
                </div>
                <div class="input">
                    @Html.DropDownList("FTId", ViewData["FTId"] as SelectList)
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        页脚名称:</label>
                </div>
                <div class="input">
                    @Html.TextBoxFor(d => d.Name, new { @class = "small", @datatype = "s6-18", @nullmsg = "请输入页脚名称！", @errormsg = "页脚名称至少1个字符,最多18个字符！" })
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        链&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;接:</label>
                </div>
                <div class="input">
                    @Html.TextBoxFor(d => d.Link, new { @class = "large", @datatype = "url", @nullmsg = "请输入链接", @errormsg = "请输入有效链接" })
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        排序编号:</label>
                </div>
                <div class="input">
                @Html.TextBoxFor(d => d.OrderId,new{@class="small",@datatype="n",@nullmsg="请输入排序编号！",@errormsg="排序编号只能是阿拉伯数字!"})
                    <span class="error">数字大小,显示排序排前</span>
                </div>
            </div>
            <div class="buttons">
                <input type="submit" name="submit" value="修改" class="ui-button ui-widget ui-state-default ui-corner-all"
                    role="button" aria-disabled="false" />
                <input type="reset" name="reset" value="清空" class="ui-button ui-widget ui-state-default ui-corner-all"
                    role="button" aria-disabled="false" />
            </div>
        </div>
    </div>
}
<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        //A
        $("#h-menu-footers").addClass("selected");
        $("#menu-footers").removeClass("closed");
        //B
        $("#footersli").removeClass("plus");
        $("#footersul").removeClass("collapsed");
        //C
        $("#footersli").addClass("minus");
        $("#footersul").addClass("expanded");
        //D
        $("#footersadd").addClass("current");
        //Validform
        $("#editform").Validform();
    });
</script>
<!-- scripts (Validform) -->
<script src="@Url.Content("~/Content/admin/scripts/Validform_v5.1.js")" type="text/javascript"></script>
