@model ChilonSoft.Helpers.Pager<ChilonSoft.Models.Footers>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<!--<h2>Index</h2> -->
<div class="box">
    <!-- box / title -->
    <div class="title">
        <h5>
            页 脚 列 表</h5>
    </div>
    <!-- end box / title -->
    <div class="table">
        <form action="" method="post">
        <table>
            <thead>
                <tr>
                    <th>
                        编号
                    </th>
                    <th>
                        页脚名称
                    </th>
                    <th>
                        链接地址
                    </th>
                    <th>
                        排序编号
                    </th>
                    <th>
                        状态
                    </th>
                    <th>
                        操作
                    </th>
                    <th class="selected last">
                        <input type="checkbox" class="checkall">
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="category">
                            @Html.Encode(item.Id)
                        </td>
                        <td class="category">
                            @Html.Encode(item.Name)
                        </td>
                        <td class="category">
                            @if (item.Link != "null")
                            {
                                <a href="@Html.Encode(item.Link)" target="_blank">@Html.Encode(item.Link)</a>                 
                            }
                            <p>
                                优先级别高</p>
                        </td>
                        <td class="category">
                            @Html.Encode(item.OrderId)
                        </td>
                        <td class="category">
                            @Html.Encode(item.State.ToString() == "1" ? "启用" : "停用")
                        </td>
                        <td class="category">
                            <!-- Icons -->
                            <a href="@Url.Action("delete", "footers", new { id = item.Id })" title="删除" onclick="return confirm('删除后无法恢复,确定要删除吗')">
                                <img src="/Content/admin/images/icons/crossRed.png" alt="删除" /></a> <a href="@Url.Action("edit", "footers", new { id = item.Id })" title="修改">
                                    <img src="/Content/admin/images/icons/hammer_screwdriver.png" alt="修改" /></a>
                        </td>
                        <td class="selected last">
                            <input type="checkbox">
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <!-- pagination -->
        <div class="pagination pagination-left">
            <ul class="pager">
                @if (Model.HasPreviousPage)
                {
                    <li><a href="@Url.Action("index", "footers", new { page = (Model.PageIndex) })" title="Previous Page">
                        &laquo; 上一页</a></li>
                            if (Model.CurrentPage >= 8)
                            {
                    
                    <li><a href="@Url.Action("index", "footers", new { page = (1) }) " class="number" >1</a></li>
                    <li><a href="@Url.Action("index", "footers", new { page = (2) }) " class="number" >2</a></li>
                    <li class="separator">...</li>
                            }
                            if (Model.CurrentPage == 6)
                            {
                    <li><a href="@Url.Action("index", "footers", new { page = (1) }) " class="number" >1</a></li>
                            }
                            if (Model.CurrentPage == 7)
                            {
                    <li><a href="@Url.Action("index", "footers", new { page = (1) }) " class="number" >1</a></li>
                    <li><a href="@Url.Action("index", "footers", new { page = (2) }) " class="number" >2</a></li>
                            }
                }
                @foreach (int i in Model.PageList)
                {
                    if (Model.PageIndex + 1 == i)
                    {
                    <li class="current"><a href="@Url.Action("index", "footers", new { page = (i) })" class="number current" >@i.ToString()</a></li>
                    }
                    else
                    {
                    <li><a href="@Url.Action("index", "footers", new { page = (i) }) " class="number" >@i.ToString()</a></li>
                    }

                }
                @if (Model.HasNextPage)
                {
                    if (Model.CurrentPage <= (Model.TotalPages - 8))
                    {
                    <li class="separator">...</li>
                    <li><a href="@Url.Action("index", "footers", new { page = (Model.TotalPages - 1) }) " class="number" >@(Model.TotalPages - 1)</a></li>
                    <li><a href="@Url.Action("index", "footers", new { page = (Model.TotalPages) }) " class="number" >@Model.TotalPages</a></li>

                    }
                    if (Model.CurrentPage == (Model.TotalPages - 6))
                    {
                    <li><a href="@Url.Action("index", "footers", new { page = (Model.TotalPages - 1) }) " class="number" >@(Model.TotalPages - 1)</a></li>
                    <li><a href="@Url.Action("index", "footers", new { page = (Model.TotalPages) }) " class="number" >@Model.TotalPages</a></li>
                    }
                    if (Model.CurrentPage == (Model.TotalPages - 5))
                    {
                    <li><a href="@Url.Action("index", "footers", new { page = (Model.TotalPages) }) " class="number" >@Model.TotalPages</a></li>
                    }
                    if (Model.CurrentPage == (Model.TotalPages - 7))
                    {
                    <li><a href="@Url.Action("index", "footers", new { page = (Model.TotalPages - 1) }) " class="number" >@(Model.TotalPages - 2)</a></li>
                    <li><a href="@Url.Action("index", "footers", new { page = (Model.TotalPages - 2) }) " class="number" >@(Model.TotalPages - 1)</a></li>
                    <li><a href="@Url.Action("index", "footers", new { page = (Model.TotalPages) }) " class="number" >@Model.TotalPages</a></li>

                    }
                    <li><a href="@Url.Action("index", "footers", new { page = (Model.PageIndex + 2) })" >
                        下一页 &raquo;</a></li> 

                }
            </ul>
        </div>
        </form>
    </div>
</div>
<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        //A
        $("#h-menu-footers").addClass("selected");
        $("#menu-footers").removeClass("closed");
        //B
        $("#footersli").removeClass("plus");
        $("#footersul").removeClass("collapsed");
        //C
        $("#footersli").addClass("minus");
        $("#footersul").addClass("expanded");
        //D
        $("#footerslist").addClass("current");
    });
</script>
