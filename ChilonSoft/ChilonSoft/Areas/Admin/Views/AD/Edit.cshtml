@model ChilonSoft.Models.AD
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<h2>
    修 改 广 告</h2>
<link href="/Content/Uploadify/uploadify.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="@Url.Content("~/Content/Scripts/swfobject.js")" ></script>
<script type="text/javascript" src="@Url.Content("~/Content/Uploadify/jquery.uploadify.v2.1.4.min.js")" ></script>
<script type="text/javascript" src="@Url.Content("~/Content/Kindeditor/kindeditor-min.js")" ></script>
<script type="text/javascript" src="@Url.Content("~/Content/Kindeditor/lang/zh_CN.js")" ></script>
<script type="text/javascript" src="@Url.Content("~/Content/My97DatePicker/WdatePicker.js")" ></script>
@using (Html.BeginForm("edit", "ad", FormMethod.Post, new { id = "editform" }))
{ 
    <div class="form">
        <div class="fields">
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        广告分类:</label>
                </div>
                <div class="input">
                    @Html.DropDownList("ClassID", ViewData["ClassID"] as SelectList)
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        广告类型:</label>
                </div>
                <div class="input">
                    @Html.DropDownList("AdType", ViewData["AdType"] as SelectList)
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        广告名称:</label>
                </div>
                <div class="input">
                    @Html.TextBoxFor(d => d.AdName, new
           {
               @class = "small",
               @datatype = "s6-18",
               @nullmsg = "请输入广告名称！"
               ,
               @errormsg = "广告名称至少1个字符,最多18个字符！"
           })
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        广告内容:</label>
                </div>
                <div class="input">
                    <input type="text" id="uploadpic" name="uploadpic" />
                    <a href="javascript:$('#uploadpic').uploadifyUpload()">上传文件</a><br />
                    @Html.TextAreaFor(d => d.AdContent, new { @style = "display: none" })
                    @{string imageurl = ViewData["ImageURL"].ToString();
                      int adtype = int.Parse(ViewData["AdTypeID"].ToString()); }
                    @if (adtype == 0)
                    {
                        <img src="@Url.Content("~" + imageurl)" alt="修改前图片" class="right" width:"100px" height="200px"/>  
                    }
                    @if (adtype == 1)
                    {
                        <script src="@ViewData["AdJS"].ToString()"></script>
                    }
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        广告描述:</label>
                </div>
                <div class="input">
                    @Html.TextAreaFor(d => d.AdDescr, new { @style = "width: 680px; height: 300px;" })
                    <span class="blue">您当前输入了 <span class="word_count">0</span> 个文字。</span>
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        开始时间:</label>
                </div>
                <div class="input">
                    @Html.TextBoxFor(d => d.TermStart, new { @class = "Wdate", @onClick = "WdatePicker()" })
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        到期时间:</label>
                </div>
                <div class="input">
                     @Html.TextBoxFor(d => d.TermEnd, new { @class = "Wdate", @onClick = "WdatePicker()" })
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        广告宽度:</label>
                </div>
                <div class="input">
                    @Html.TextBoxFor(d => d.AdHeight, new
               {
                   @class = "small",
                   @datatype = "n",
                   @nullmsg = "请输入广告宽度",
                   @errormsg = "广告宽度为有效数字"
               })
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        广告高度:</label>
                </div>
                <div class="input">
                    @Html.TextBoxFor(d => d.AdWidth, new
               {
                   @class = "small",
                   @datatype = "n",
                   @nullmsg = "请输入广告高度",
                   @errormsg = "广告高度为有效数字"
               })
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        链&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;接:</label>
                </div>
                <div class="input">
                    @Html.TextBoxFor(d => d.AdLink, new { @class = "large", @datatype = "url", @nullmsg = "请输入链接", @errormsg = "请输入有效链接" })
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        排序编号:</label>
                </div>
                <div class="input">
                    @Html.TextBoxFor(d => d.OrderNum, new { @class = "small", @datatype = "n", @nullmsg = "请输入排序编号！", @errormsg = "排序编号只能是阿拉伯数字!" })
                    <span class="error">数字大小,显示排序排前</span>
                </div>
            </div>
            <div class="buttons">
                <input type="submit" name="submit" value="修改" class="ui-button ui-widget ui-state-default ui-corner-all"
                    role="button" aria-disabled="false" />
                <input type="reset" name="reset" value="清空" class="ui-button ui-widget ui-state-default ui-corner-all"
                    role="button" aria-disabled="false" />
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    $(function () {
        //上传
        $('#uploadpic').uploadify({
            'uploader': '/Content/Uploadify/uploadify.swf',
            'script': '@Url.Action("UploadImage", "AD")',
            'cancelImg': '/Content/Uploadify/cancel.png',
            'fileExt': '*.jpg;*.gif;*.png;*.swf',
            'fileDesc': '支持的格式(.JPG, .GIF, .PNG, .SWF)',
            'buttonImg': '/Content/Uploadify/browse_sc2.jpg',
            'sizeLimit': 1024 * 1024 * 4, //4M
            'auto': false,
            'multi': false,
            'method': 'post',
            'onComplete': function (event, queueID, fileObj, response, data) {
                $('#AdContent').val(response);
                $('#WaterPicURL').attr("src", response.split("|")[0]);
            }
        });
    });          
</script>
<script>
    KindEditor.ready(function (K) {
        K.create('textarea[name="AdDescr"]', {
            afterChange: function () {
                K('.word_count').html(this.count());
            }
        });
    });
</script>
<!-- scripts (Validform) -->
<script src="@Url.Content("~/Content/admin/scripts/Validform_v5.1.js")" type="text/javascript"></script>
<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        //A
        $("#h-menu-ad").addClass("selected");
        $("#menu-ad").removeClass("closed");
        //B
        $("#adli").removeClass("plus");
        $("#adul").removeClass("collapsed");
        //C
        $("#adli").addClass("minus");
        $("#adul").addClass("expanded");
        //D
        $("#adadd").addClass("current");
        //Validform
        $("#editform").Validform();
    });
</script>
