    </div>
</div>
<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        //A
        $("#h-menu-article").addClass("selected");
        $("#menu-article").removeClass("closed");
        //B
        $("#articleli").removeClass("plus");
        $("#articleul").removeClass("collapsed");
