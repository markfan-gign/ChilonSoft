@model ChilonSoft.Models.Job
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<h2>
    创 建 职 位</h2>
<script type="text/javascript" src="@Url.Content("~/Content/Kindeditor/kindeditor-min.js")" ></script>
<script type="text/javascript" src="@Url.Content("~/Content/Kindeditor/lang/zh_CN.js")" ></script>
<script type="text/javascript" src="@Url.Content("~/Content/My97DatePicker/WdatePicker.js")" ></script>
@using (Html.BeginForm("Add", "job", FormMethod.Post, new { id = "addform" }))
{ 
    <div class="form">
        <div class="fields">
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        职位名称:</label>
                </div>
                <div class="input">
                    <input type="text" id="JobName" name="JobName" class="small" datatype="s6-18" nullmsg="请输入职位名称！"
                        errormsg="职位名称至少6个字符,最多18个字符！">
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        岗位数量:</label>
                </div>
                <div class="input">
                    <input class="small" type="text" id="JobSize" name="JobSize" datatype="n" nullmsg="请输入岗位数量！"
                        errormsg="请填写数字！" />
                    <span class="blue">请填写阿拉伯数字</span>
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        岗位职责:</label>
                </div>
                <div class="input">
                    <textarea name="JobDuty" style="width: 680px; height: 300px;"></textarea>
                    <span class="blue">您当前输入了 <span class="word_count">0</span> 个文字。</span>
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        福利待遇:</label>
                </div>
                <div class="input">
                    <textarea name="Welfare" style="width: 680px; height: 300px;"></textarea>
                    <span class="blue">您当前输入了 <span class="word_count1">0</span> 个文字。</span>
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        岗位描述:</label>
                </div>
                <div class="input">
                    <textarea name="JobContent" style="width: 680px; height: 300px;"></textarea>
                    <span class="blue">您当前输入了 <span class="word_count2">0</span> 个文字。</span>
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        岗位需求:</label>
                </div>
                <div class="input">
                    <input class="small" type="text" id="JobRequire" name="JobRequire" nullmsg="请输入岗位需求！" />
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        招聘结束时间:</label>
                </div>
                <div class="input">
                    <input class="Wdate" type="text" onclick="WdatePicker()" id="OverTime" name="OverTime" />
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        置顶(是/否):</label>
                </div>
                <div class="input">
                    @Html.DropDownList("IsTop", ViewData["IsTop"] as SelectList)
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        关键词:</label>
                </div>
                <div class="input">
                    <input class="large" type="text" id="SEOKeyWords" name="SEOKeyWords" datatype="s2-18"
                        nullmsg="请输入关键词！" errormsg="关键词至少2个字符,最多18个字符！" />
                    <span class="blue">关键词应该控制在100个字符即50个文字以内</span>
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        描述:</label>
                </div>
                <div class="input">
                    <input class="large" type="text" id="SEODescription" name="SEODescription" datatype="s2-18"
                        nullmsg="请输入描述！" errormsg="描述至少2个字符,最多18个字符！" />
                    <span class="blue">描述应该控制在220个字符即110个文字以内</span>
                </div>
            </div>
            <div class="field  field-first">
                <div class="label">
                    <label for="input-small">
                        排序编号:</label>
                </div>
                <div class="input">
                    <input type="text" id="Sort" name="Sort" class="small" datatype="n" nullmsg="请输入排序编号！"
                        errormsg="排序编号只能是阿拉伯数字!" />
                    <span class="error">数字大小,显示排序排前</span>
                </div>
            </div>
            <div class="buttons">
                <input type="submit" name="submit" value="创建" class="ui-button ui-widget ui-state-default ui-corner-all"
                    role="button" aria-disabled="false" />
                <input type="reset" name="reset" value="清空" class="ui-button ui-widget ui-state-default ui-corner-all"
                    role="button" aria-disabled="false" />
            </div>
        </div>
    </div>
}
<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        //A
        $("#h-menu-job").addClass("selected");
        $("#menu-job").removeClass("closed");
        //B
        $("#jobli").removeClass("plus");
        $("#jobul").removeClass("collapsed");
        //C
        $("#jobli").addClass("minus");
        $("#jobul").addClass("expanded");
        //D
        $("#jobadd").addClass("current");
        //Validform
        $("#addform").Validform();
    });
</script>
<script>
    KindEditor.ready(function (K) {
        K.create('textarea[name="JobDuty"]', {
            afterChange: function () {
                K('.word_count').html(this.count());
            }
        });
        K.create('textarea[name="Welfare"]', {
            afterChange: function () {
                K('.word_count1').html(this.count());
            }
        });
        K.create('textarea[name="JobContent"]', {
            afterChange: function () {
                K('.word_count2').html(this.count());
            }
        });
    });
</script>
<!-- scripts (Validform) -->
<script src="@Url.Content("~/Content/admin/scripts/Validform_v5.1.js")" type="text/javascript"></script>
